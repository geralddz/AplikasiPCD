        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.TrackingQRCode"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">

        <receiver
            android:name=".utils.BroadcastReceiverNotif"
            android:exported="false">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <activity
            android:name=".activity.DetailPlanActivity"
            android:exported="false">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name=".activity.DetailStationActivity"
            android:exported="false">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name=".activity.DetailSummaryActivity"
            android:exported="false" />
        <activity
            android:name=".activity.LiveMonitoringActivity"
            android:exported="false" />
        <activity
            android:name=".activity.SummaryActivity"
            android:exported="false" />
        <activity
            android:name=".activity.ScanActivity"
            android:exported="false" />
        <activity
            android:name=".activity.HomeActivity"
            android:exported="false" />
        <activity
            android:name=".activity.SignInActivity"
            android:exported="false" />
        <activity
            android:name=".activity.AndonActivity"
            android:exported="false" />
        <activity
            android:name=".activity.SplashScreenActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>